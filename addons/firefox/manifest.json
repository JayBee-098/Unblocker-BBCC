{
  "manifest_version": 2,
  "name": "AnimeSentinel Companion AddOn",
  "version": "0.4",

  "description": "Companion AddOn for AnimeSentinel.",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["onHeadersReceived.js"]
  },

  "content_scripts": [{
    "matches": [
      "*://development.wilcodeboer.me/*",
      "*://anime.wilcodeboer.me/*"
    ],
    "js": ["notifyEnabled.js"]
  }]
}
